<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            stylesheets="@style.css"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.projectcab302.Controller.CoursesController"
            prefWidth="900" prefHeight="650" style="-fx-padding:10;">


    <left>
        <VBox alignment="CENTER" spacing="10"
              style="-fx-border-color: black; -fx-border-width: 1; -fx-padding: 10;">
            <Button fx:id="back"  text="Back" onAction="#onBack"/>
            <Button fx:id="createCourse" text="Create Course" onAction="#onCreateCourse"/>
        </VBox>
    </left>

    <center>
        <HBox fx:id="courseBox" alignment="CENTER" spacing="10"
              style="-fx-border-color: black; -fx-border-width: 1; -fx-padding: 10;">

        </HBox>
    </center>

</BorderPane>
