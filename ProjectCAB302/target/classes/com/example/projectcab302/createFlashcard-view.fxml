<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.projectcab302.Controller.CreateFlashcardController"
            prefWidth="900" prefHeight="650" style="-fx-padding:10;">
    <top>
        <VBox alignment="CENTER"  spacing="10">
        <HBox alignment="CENTER"  spacing="10">
            <Button  text="Preview" onAction="#onPreview"/>
            <Button fx:id="backButton" text="Back" onAction="#onBack"/>
            <Label text="TOP" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
            <Button  text="Save" onAction="#onSave"/>
        </HBox>
        <Text text = "To make a flashcard, enter a question then place --{'Your answer'}, and click save"/>
        </VBox>
    </top>
    <center>
    <TextArea fx:id="cardEntry"
              wrapText="true"
              editable="true"
    />
    </center>
</BorderPane>
