<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.Region?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.projectcab302.Controller.RegisterController">

    <!-- Top Navigation Bar -->
    <top>
        <HBox spacing="20" style="-fx-background-color: #2C3E50;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="FlashWise" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
            <Region fx:id="spacer" HBox.hgrow="ALWAYS" />
            <Button text="Sign In" fx:id="loginBtn" onAction="#switchToLogin"/>
            <Button text="Register" fx:id="SignUpBtn" disable="true"/>
        </HBox>
    </top>

    <!-- Center Registration Form -->
    <center>
        <VBox alignment="CENTER" spacing="15">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>

            <Label text="Create Your Account" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

            <TextField fx:id="usernameField" promptText="Username" prefWidth="300"/>
            <TextField fx:id="emailField" promptText="Email" prefWidth="300"/>
            <PasswordField fx:id="passwordField" promptText="Password" prefWidth="300"/>
            <PasswordField fx:id="confirmField" promptText="Confirm Password" prefWidth="300"/>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Role:" />
                <ComboBox fx:id="roleComboBox" prefWidth="150">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Student" />
                            <String fx:value="Teacher" />
                        </FXCollections>
                    </items>
                </ComboBox>
            </HBox>

            <Button text="Register" onAction="#register" prefWidth="150"/>
            <Label fx:id="errorLabel" textFill="red"/>

        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Â© 2025 FlashWise. All rights reserved." style="-fx-text-fill: #7F8C8D;" />
        </HBox>
    </bottom>

</BorderPane>
