<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx/21"
            stylesheets="@dashboards.css"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.projectcab302.Controller.StudentQuizController"
            prefWidth="900" prefHeight="650">


<left>
    <VBox spacing="10" styleClass="sidebar-dark">
        <children>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Courses" styleClass="sidebar-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="back" text="Back" onAction="#onBack" styleClass="nav-button"/>
            </HBox>

            <Region VBox.vgrow="ALWAYS"/>
        </children>
    </VBox>
</left>

<center>
    <VBox fx:id="allCourses" spacing="6" alignment="TOP_CENTER" style="-fx-padding: 6;">
        <!-- Row with input + button side by side -->


        <ScrollPane fx:id="scrollPane"
                    fitToWidth="true"
                    prefWidth="600"
                    VBox.vgrow="ALWAYS">
            <content>
                <VBox fx:id="allQuestions"
                      spacing="10"
                      alignment="TOP_LEFT"
                      prefWidth="600"
                      fillWidth="true"/>
            </content>
        </ScrollPane>

        <HBox fx:id="submitWindow" spacing="8" alignment="CENTER_LEFT">
            <!-- If you really want multiple lines, keep TextArea; otherwise use TextField -->

            <Button fx:id="submit"
                    text="Submit"
                    onAction="#onSubmit"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
            <Text fx:id="score" />
        </HBox>
        <!-- Your course container -->

    </VBox>
</center>

</BorderPane>