<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<VBox alignment="TOP_LEFT" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.projectcab302.Controller.TranslateController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Enter English Text"
           wrapText="true"/>

    <TextArea fx:id="EnglishText"
              wrapText="true"
              editable="true"
              prefWidth="400"
              prefHeight="75"
    />

    <HBox spacing="10" alignment="CENTER_LEFT">
        <RadioButton fx:id="radioOne"/>
        <TextField fx:id="optionOne" promptText="Option 1"/>
        <RadioButton fx:id="radioTwo"/>
        <TextField fx:id="optionTwo" promptText="Option 2"/>
        <RadioButton fx:id="radioThree"/>
        <TextField fx:id="optionThree" promptText="Option 3"/>
        <RadioButton fx:id="radioFour"/>
        <TextField fx:id="optionFour" promptText="Option 4"/>
    </HBox>

    <Button fx:id="translateButton"
            text="Translate"
            onAction="#translateText"
    />
    <TextArea fx:id="VietText"
              wrapText="true"
              editable="false"
              prefWidth="400"
              prefHeight="75"
    />
    <HBox spacing="10" alignment="CENTER_LEFT">
        <RadioButton fx:id="transRadioOne"/>
        <TextField fx:id="transOptionOne" promptText="Option 1"/>
        <RadioButton fx:id="transRadioTwo"/>
        <TextField fx:id="transOptionTwo" promptText="Option 2"/>
        <RadioButton fx:id="transRadioThree"/>
        <TextField fx:id="transOptionThree" promptText="Option 3"/>
        <RadioButton fx:id="transRadioFour"/>
        <TextField fx:id="transOptionFour" promptText="Option 4"/>
    </HBox>

    <HBox alignment="BOTTOM_RIGHT" spacing="10.0">
        <Button text="Cancel" />
        <Button fx:id="nextButton"
                text="Next"

                disable="true"
        />
    </HBox>
    <Label fx:id="welcomeText"/>
    <Button text="Hello!" onAction="#onHelloButtonClick"/>
</VBox>



