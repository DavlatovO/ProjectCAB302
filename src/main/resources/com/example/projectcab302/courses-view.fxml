<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            stylesheets="@dashboards.css"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.projectcab302.Controller.CoursesController"
            prefWidth="900" prefHeight="650">


    <left>
        <VBox spacing="10" styleClass="sidebar-dark">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="Courses" styleClass="sidebar-title"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="back" text="Back" onAction="#onBack" styleClass="nav-button"/>
                </HBox>

                <Region VBox.vgrow="ALWAYS"/>
            </children>
        </VBox>
    </left>

    <center>
        <VBox fx:id="allCourses" spacing="12" alignment="TOP_CENTER" style="-fx-padding: 12;">
            <!-- Row with input + button side by side -->
            <HBox spacing="8" alignment="CENTER_LEFT">
                <!-- If you really want multiple lines, keep TextArea; otherwise use TextField -->
                <TextField fx:id="courseField"
                           promptText="Add your course here"
                           HBox.hgrow="ALWAYS"/>
                <Button fx:id="createCourse"
                        text="+  Create Course"
                        onAction="#onCreateCourse"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
            </HBox>

            <GridPane fx:id="courseGrid"  hgap="8" vgap="8" alignment="TOP_CENTER" style="-fx-padding: 8;">
            <!-- Three equal-width columns -->
            <columnConstraints>
                <ColumnConstraints percentWidth="33.3333" hgrow="ALWAYS" halignment="CENTER"/>
                <ColumnConstraints percentWidth="33.3333" hgrow="ALWAYS" halignment="CENTER"/>
                <ColumnConstraints percentWidth="33.3333" hgrow="ALWAYS" halignment="CENTER"/>
            </columnConstraints>
            </GridPane>


            <!-- Your course container -->

        </VBox>
    </center>

</BorderPane>
