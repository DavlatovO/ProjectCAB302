<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.paint.PhongMaterial?>
<?import javafx.scene.Group?>

<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx/21"
            stylesheets="@style.css"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.projectcab302.Controller.FlashcardController"
            prefWidth="900" prefHeight="650" style="-fx-padding:10;">

    <!-- TOP (optional) -->
    <!--
    <top>
        <StackPane prefHeight="60" style="-fx-border-color:#333; -fx-border-width:1;">
            <Label text="TOP" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
        </StackPane>
    </top>
    -->

    <!-- LEFT / RIGHT / BOTTOM regions are optional; add if needed -->
    <!-- LEFT: Create Flashcard button -->
    <left>
        <VBox alignment="CENTER" spacing="10"
              style="-fx-border-color: black; -fx-border-width: 1; -fx-padding: 10;">
            <Button text="Back" onAction="#onBack"/>
            <Button fx:id="createButton" text="Create flashcard" onAction="#onCreateFlashcard"/>
        </VBox>
    </left>

    <center>
        <VBox alignment="CENTER"
              style="-fx-border-color: black; -fx-border-width: 2;"
              spacing="20">

            <Text fx:id="cardNum" fill="Black"/>
            <Text fx:id="question" fill="Black"/>
            <Button text="Flip" onAction="#flipCard"/>

            <StackPane fx:id="cubeGroup">
                <Rectangle width="800" height="400"
                           fill="lightblue" stroke="black" strokeWidth="2"/>
                <!-- Example 3D Box (commented out)
                <Box fx:id="cube" width="800" height="400" depth="50">
                    <material>
                        <PhongMaterial diffuseColor="lightblue" />
                    </material>
                </Box>
                -->
                <Text fx:id="test" x="-50" y="0" fill="Black"/>
            </StackPane>
            <TextArea fx:id="Answer"
                      wrapText="true"
                      editable="true"
            />
            <Button text="Submit" onAction="#onSubmit"/>
            <Text fx:id="aiResponse" fill="Black"/>
            <HBox alignment="CENTER" spacing="200">
                <Button text="Prev" onAction="#prevCard"/>
                <Button text="Next" onAction="#nextCard"/>
            </HBox>

        </VBox>
    </center>

</BorderPane>
