<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            stylesheets="@dashboards.css"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.projectcab302.Controller.QuizController"
            prefWidth="900" prefHeight="650">


    <left>
        <VBox spacing="10" styleClass="sidebar-dark">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="Quizzes" styleClass="sidebar-title"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="Back" onAction="#onBack" styleClass="nav-button"/>
                </HBox>

                <Region VBox.vgrow="ALWAYS"/>
                <Button alignment="bottom_left" text="+  Create Quiz" onAction="#createQuiz"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
                <Button alignment = "bottom_left" text="+  Edit Quiz" onAction="#editQuiz"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
                <Button alignment = "bottom_left" text="+  Delete Quiz" onAction="#deleteQuiz"
                style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>

            </children>
        </VBox>
    </left>

    <center>
        <HBox alignment="CENTER" spacing="10"
              style="-fx-border-color: black; -fx-border-width: 1; -fx-padding: 10;">
        </HBox>
    </center>

</BorderPane>
