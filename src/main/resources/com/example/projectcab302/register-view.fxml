<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.projectcab302.Controller.RegisterController"
      spacing="10"
      alignment="CENTER">

    <Label text="Register" style="-fx-font-size: 20px"/>

    <TextField fx:id="usernameField" promptText="Username"/>
    <TextField fx:id="emailField" promptText="Email"/>

    <PasswordField fx:id="passwordField" promptText="Password"/>
    <PasswordField fx:id="confirmField" promptText="Confirm Password"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Role:"  />
        <ComboBox fx:id="roleComboBox">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Student" />
                    <String fx:value="Teacher" />
                </FXCollections>
            </items>
        </ComboBox>
    </HBox>


    <Button text="Register" onAction="#handleRegister"/>
    <Button text="Back to Login" onAction="#switchToLogin"/>
    <Label fx:id="errorLabel" textFill="red"/>

</VBox>
